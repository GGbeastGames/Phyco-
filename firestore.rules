rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isSignedIn()
        && request.auth.token is map
        && request.auth.token.keys().hasAny(['isAdmin'])
        && request.auth.token.isAdmin == true;
    }

    function userCreateShape(uid) {
      return request.resource.data.keys().hasOnly([
        'uid',
        'balance',
        'trace',
        'xp',
        'level',
        'rankScore',
        'ownedCommands',
        'installedModules',
        'traits',
        'cooldowns',
        'questProgress',
        'blockchainAssets',
        'pvp',
        'updatedAt',
        'displayName',
        'photoURL',
        'lastSeenAt',
        'isAdmin',
        'createdAt'
      ])
      && request.resource.data.uid == uid
      && request.resource.data.isAdmin == false
      && request.resource.data.balance == 0
      && request.resource.data.trace == 0
      && request.resource.data.level == 1
      && request.resource.data.xp == 0
      && request.resource.data.rankScore == 0;
    }

    function userOwnerMutableFieldsOnly() {
      return request.resource.data.diff(resource.data).changedKeys().hasOnly([
        'displayName',
        'photoURL',
        'lastSeenAt',
        'updatedAt'
      ]);
    }

    function immutableAdminAndIdentityFields() {
      return request.resource.data.uid == resource.data.uid
        && request.resource.data.isAdmin == resource.data.isAdmin
        && request.resource.data.createdAt == resource.data.createdAt;
    }

    function baselineUserBounds() {
      return request.resource.data.trace is number
        && request.resource.data.trace >= 0
        && request.resource.data.trace <= 100
        && request.resource.data.level is number
        && request.resource.data.level >= 1
        && request.resource.data.level <= 999
        && request.resource.data.balance is number
        && request.resource.data.balance >= 0;
    }

    match /users/{uid} {
      allow read: if isOwner(uid) || isAdmin();

      allow create: if isOwner(uid) && userCreateShape(uid);

      allow update: if immutableAdminAndIdentityFields()
        && baselineUserBounds()
        && (
          (isOwner(uid) && userOwnerMutableFieldsOnly())
          || isAdmin()
        );

      allow delete: if false;

      match /commandIntents/{intentId} {
        allow read: if isOwner(uid) || isAdmin();
        allow create: if isOwner(uid)
          && request.resource.data.uid == uid
          && request.resource.data.createdAt is timestamp
          && request.resource.data.nonce is string
          && request.resource.data.intentHash is string;
        allow update, delete: if false;
      }

      match /cooldowns/{commandId} {
        allow read: if isOwner(uid) || isAdmin();
        allow write: if isAdmin();
      }

      match /questClaims/{questId} {
        allow read: if isOwner(uid) || isAdmin();
        allow create: if isOwner(uid)
          && request.resource.data.uid == uid
          && request.resource.data.claimedAt is timestamp;
        allow update, delete: if false;
      }
    }

    match /userPublic/{uid} {
      allow read: if true;
      allow write: if isOwner(uid) || isAdmin();
    }

    match /commands/{commandId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /quests/{questId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /marketRotations/{rotationId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /seasonConfigs/{seasonId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /globalState/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /globalState/{docId}/events/{eventId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /pvpMatches/{matchId} {
      allow read: if isSignedIn() && (
        resource.data.playerAUid == request.auth.uid
        || resource.data.playerBUid == request.auth.uid
        || isAdmin()
      );

      allow create: if isSignedIn()
        && request.resource.data.status == 'queued'
        && request.resource.data.playerAUid == request.auth.uid
        && request.resource.data.playerBUid is string;

      allow update: if isAdmin() || (
        isSignedIn()
        && resource.data.status == 'queued'
        && request.resource.data.status == 'active'
        && (
          resource.data.playerAUid == request.auth.uid
          || resource.data.playerBUid == request.auth.uid
        )
        && request.resource.data.playerAUid == resource.data.playerAUid
        && request.resource.data.playerBUid == resource.data.playerBUid
        && request.resource.data.winnerUid == null
      );

      allow delete: if isAdmin();
    }

    match /adminLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isAdmin()
        && request.resource.data.actorUid == request.auth.uid
        && request.resource.data.createdAt is timestamp;
      allow update, delete: if false;
    }

    match /economySnapshots/{snapshotId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
